rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Hospitals: Public read, Admin write (queue updates)
    // Cloud Functions also have admin access by default
    match /hospitals/{hospitalId} {
      allow read: if true;
      allow write: if request.auth != null; // Simpler rule: any auth user can write (admin)
    }
  }
}
